{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
